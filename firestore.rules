rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User Profiles: Publicly readable, but only the user can write to their own profile.
    match /userProfiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // User Routes: Publicly readable for searching, but only the owner can write.
    match /users/{userId}/routes/{routeId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.uid == userId;
    }
    
    // All Routes (for Collection Group Query): Allow any authenticated user to read.
    match /{path=**}/routes/{routeId} {
        allow read: if request.auth != null;
    }

    // Ride Requests: Creatable by the rider, readable/updatable by rider or driver.
    match /rideRequests/{rideRequestId} {
      allow create: if request.auth.uid == request.resource.data.riderId;
      allow read, update, delete: if request.auth.uid == resource.data.riderId || request.auth.uid == resource.data.driverId;
    }

    // Delivery Requests: Creatable by sender, readable/updatable by sender or driver.
    match /deliveryRequests/{deliveryRequestId} {
      allow create: if request.auth.uid == request.resource.data.senderId;
      allow read, update, delete: if request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.driverId;
    }

    // Booking Confirmations: Accessible only by the involved rider or driver.
    match /bookingConfirmations/{bookingConfirmationId} {
      allow read, write: if request.auth.uid == resource.data.riderId || request.auth.uid == resource.data.driverId;
    }

    // User Feedback: Allow any authenticated user to create feedback. Reading/updating is restricted.
    match /userFeedback/{userFeedbackId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth.uid == resource.data.driverId; // Only the driver can see their feedback for now.
    }
    
    // Conversations: Only participants can access conversation metadata.
    match /conversations/{conversationId} {
      allow read, update, delete: if request.auth.uid in resource.data.participantIds;
      allow create: if request.auth.uid in request.resource.data.participantIds;

      // Messages: Only participants of the parent conversation can access messages.
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        allow update, delete: if false; // Disallow message editing/deletion for now.
      }
    }
  }
}
